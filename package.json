{
  "name": "easyconv-app",
  "version": "0.1.0",
  "private": true,
  "author": "Austin Brown",
  "description": "Electrion + React based Conversion App",
  "dependencies": {
    "concurrently": "^4.0.1",
    "electron-store": "^2.0.0",
    "ffmpeg-static": "git+https://github.com/eugeneware/ffmpeg-static.git",
    "ffprobe-static": "git+https://github.com/joshwnj/ffprobe-static.git",
    "fluent-ffmpeg": "git+https://github.com/fluent-ffmpeg/node-fluent-ffmpeg.git",
    "path": "^0.12.7",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-scripts": "1.1.5",
    "wait-on": "^3.1.0"
  },
  "homepage": "./",
  "main": "public/electron.js",
  "scripts": {
    "start": "npm run electron-dev",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "electron": "electron . ",
    "react-start": "BROWSER=none react-scripts start",
    "electron-start": "NODE_ENV=development node src/electron-wait-react",
    "electron-dev": "concurrently \"npm run react-start\" \"wait-on http://localhost:3000 && npm run electron-start\"",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist-all": "electron-builder -mwl",
    "electron-pack": "electron-builder -c.extraMetadata.main = build/electron.js",
    "preelectron-pack": "yarn build"
  },
  "devDependencies": {
    "electron": "^2.0.10",
    "electron-builder": "^20.28.4",
    "react-dropzone": "^5.1.0",
    "react-sweet-progress": "^1.1.2"
  },
  "build": {
    "appId": "com.electron.easyconv-app",
    "productName": "EasyConv",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "mac": {
      "category": "conversion.app"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "build/icon.ico"
    }
  }
}
